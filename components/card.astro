---
const { columns, rows, className } = Astro.props;
const style = `grid-column: ${columns}; grid-row-start: ${rows};`;
const classes = `bg-white rounded-[10px] shadow-[0_0_10px_rgba(0,0,0,0.1)] p-10 lg:p-12 m-0 w-full ${className || ""}`;

---

<section class={classes} style={style}>
    <slot />
</section>
